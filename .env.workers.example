# ANB Platform - Workers Environment Configuration
# Copy this file to .env.workers and fill in your values

# Webserver Configuration
# Use the PRIVATE IP of your webserver EC2 instance for better performance
WEBSERVER_PRIVATE_IP=10.0.1.100

# Database Configuration (must match webserver)
POSTGRES_PASSWORD=your_secure_password_here_change_this

# Worker Scaling Configuration
WORKER_REPLICAS=3
WORKER_CONCURRENCY=2

# Optional: NFS Configuration
# NFS_SERVER_IP=10.0.1.200
# NFS_MOUNT_PATH=/mnt/nfs/anb-storage
